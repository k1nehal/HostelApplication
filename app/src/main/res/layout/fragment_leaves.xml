<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Stu_Basic_Details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">



        <EditText
            android:id="@+id/R_Date"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="Report Date"

            android:layout_marginTop="20dp"
            android:ems="10"
            android:drawableLeft="@drawable/ic_action_email"
            android:background="@drawable/edittext"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/R_Time"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="Report Time"
            android:layout_toRightOf="@+id/R_Date"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:drawableLeft="@drawable/ic_action_email"
            android:background="@drawable/edittext"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:drawableStart="@drawable/ic_action_email" />
        <EditText
            android:id="@+id/Reason"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:hint="Reason"
            android:layout_below="@+id/R_Date"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:drawableLeft="@drawable/ic_action_email"
            android:background="@drawable/edittext"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/Mobile"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:hint="Parent's Mobile"
            android:layout_below="@+id/Reason"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:drawableLeft="@drawable/ic_action_email"
            android:background="@drawable/edittext"
            android:textSize="20sp"
            />
            <Spinner
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/spinner_back"
                android:layout_below="@+id/Address"
                android:layout_marginTop="25dp"
                android:id="@+id/Numbers"/>

        <EditText
            android:id="@+id/Address"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_below="@+id/Mobile"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="10"
            android:layout_marginTop="20dp"
            android:scrollbars="vertical"
            android:background="@drawable/edittext"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_action_email"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Numbers"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="@color/cardbackground"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/Approval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send for Approval"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:textSize="20dp"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>